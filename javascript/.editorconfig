root = true

# All files
[*]
indent_style = space
indent_size = 4
trim_trailing_whitespace = true

# C# files
[*.{cs,csx}]
indent_style = tab
insert_final_newline = true
charset = utf-8-bom

# F# files
[*.{fs,fsi,fsx}]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 4

[*.{js,json}]
indent_style = tab
charset = utf-8
insert_final_newline = true
end_of_line = lf
# editorconfig-tools is unable to ignore longs strings or urls
max_line_length = null

[*.{css,scss}]
indent_style = tab
charset = utf-8
insert_final_newline = true
end_of_line = lf
# editorconfig-tools is unable to ignore longs strings or urls
max_line_length = null

[*.{yml,yaml}]
indent_size = 2

[*.{md,txt}]
indent_size = 4
trim_trailing_whitespace = false

# Xml project files
[*.{csproj,fsproj}]
indent_size = 2

# Razor and webforms
[*.{cshtml,aspx}]
indent_size = 2

# Xml config files
[*.{props,targets,ruleset,config,nuspec,resx,vsixmanifest,vsct}]
indent_size = 2
